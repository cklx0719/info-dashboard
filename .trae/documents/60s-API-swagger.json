          {
            "$ref": "#/components/schemas/BaseResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "游戏标题"
                    },
                    "description": {
                      "type": "string",
                      "description": "游戏描述"
                    },
                    "image": {
                      "type": "string",
                      "description": "游戏图片"
                    },
                    "url": {
                      "type": "string",
                      "description": "游戏链接"
                    },
                    "startDate": {
                      "type": "string",
                      "description": "开始时间"
                    },
