  "components": {
    "schemas": {
      "BaseResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "description": "响应状态码",
            "example": 200
          },
          "message": {
            "type": "string",
            "description": "响应消息",
            "example": "success"
          },
          "timestamp": {
            "type": "integer",
            "description": "时间戳",
            "example": 1640995200000
          }
        },
        "required": ["code", "message", "timestamp"]
      },
      "NewsResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "标题"
                  },
                  "news": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "新闻列表"
                  },
                  "tip": {
                    "type": "string",
                    "description": "每日一句"
                  },
                  "date": {
                    "type": "string",
                    "description": "日期"
                  }
                }
              }
            }
          }
        ]
      },
      "ExchangeResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "from": {
                    "type": "string",
                    "description": "源货币"
                  },
                  "to": {
                    "type": "string",
                    "description": "目标货币"
                  },
                  "rate": {
                    "type": "number",
                    "description": "汇率"
                  },
                  "amount": {
                    "type": "number",
                    "description": "换算金额"
                  },
                  "result": {
                    "type": "number",
                    "description": "换算结果"
                  }
                }
              }
            }
          }
        ]
      },
      "BingWallpaperResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "壁纸标题"
                  },
                  "url": {
                    "type": "string",
                    "description": "壁纸URL"
                  },
                  "copyright": {
                    "type": "string",
                    "description": "版权信息"
                  },
                  "date": {
                    "type": "string",
                    "description": "日期"
                  }
                }
              }
            }
          }
        ]
      },
      "HistoryResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "year": {
                      "type": "string",
                      "description": "年份"
                    },
                    "title": {
                      "type": "string",
                      "description": "事件标题"
                    },
                    "desc": {
                      "type": "string",
                      "description": "事件描述"
                    }
                  }
                }
              }
            }
          }
        ]
      },
      "HotSearchResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "rank": {
                      "type": "integer",
                      "description": "排名"
                    },
                    "title": {
                      "type": "string",
                      "description": "标题"
                    },
                    "url": {
                      "type": "string",
                      "description": "链接"
                    },
                    "hot": {
                      "type": "string",
                      "description": "热度"
                    }
                  }
                }
              }
            }
          }
