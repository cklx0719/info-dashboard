    "/v2/hash": {
      "get": {
        "tags": ["实用功能"],
        "summary": "哈希计算",
        "description": "计算文本的各种哈希值",
        "parameters": [
          {
            "name": "text",
            "in": "query",
            "description": "待计算文本",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "哈希类型",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["md5", "sha1", "sha256", "sha512"],
              "default": "md5"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "计算成功",
            "content": {
              "application/json": {
