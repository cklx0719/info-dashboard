        "parameters": [
          {
            "name": "ip",
            "in": "query",
            "description": "IP地址，默认查询请求者IP",
            "required": false,
            "schema": {
              "type": "string",
              "format": "ipv4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "查询成功",
