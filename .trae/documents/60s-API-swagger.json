{
  "openapi": "3.0.3",
  "info": {
    "title": "60s API",
    "description": "60s API 是一系列高质量、开源、可靠、全球 CDN 加速的开放 API 集合。包括日更资讯、热搜榜单、实用功能、娱乐消遣等多种类型的API服务。",
    "version": "2.0.0",
    "contact": {
      "name": "vikiboss",
      "url": "https://github.com/vikiboss/60s"
    },
    "license": {
      "name": "MIT",
      "url": "https://github.com/vikiboss/60s/blob/main/LICENSE"
    }
  },
  "servers": [
    {
      "url": "https://60s.viki.moe",
      "description": "主域名 (Deno Deploy)"
    },
    {
      "url": "https://60s.b23.run",
      "description": "备用域名 1 (Deno Deploy)"
    },
    {
      "url": "https://60s-api-cf.viki.moe",
      "description": "备用域名 2 (CF Workers)"
    },
    {
      "url": "https://60s-api.114128.xyz",
      "description": "备用域名 3 (Deno Deploy)"
    },
    {
      "url": "https://60s-api-cf.114128.xyz",
      "description": "备用域名 4 (CF Workers)"
    }
  ],
  "tags": [
    {
      "name": "日更资讯",
      "description": "每日更新的资讯类API，包括60秒读懂世界、汇率换算、必应壁纸、历史上的今天等"
    },
    {
      "name": "热搜榜单",
      "description": "各大平台的热搜榜单API，包括哔哩哔哩、抖音、知乎、微博、头条等"
    },
    {
      "name": "实用功能",
      "description": "实用工具类API，包括翻译、百科、Epic游戏、IP查询、哈希计算等"
    },
    {
      "name": "娱乐消遣",
      "description": "娱乐类API，包括段子、一言、答案之书、运势、唱歌音频等"
    }
  ],
  "paths": {
    "/v2/60s": {
      "get": {
        "tags": ["日更资讯"],
        "summary": "60秒读懂世界",
        "description": "获取每日60秒读懂世界新闻资讯，支持多种返回格式",
        "parameters": [
          {
            "name": "encoding",
            "in": "query",
            "description": "返回格式",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["json", "text", "image", "image-proxy"],
              "default": "json"
            }
          },
          {
            "name": "v2",
            "in": "query",
            "description": "版本标识，设置为1使用V2格式",
            "required": false,
            "schema": {
              "type": "integer",
              "enum": [1]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取60秒读懂世界资讯",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewsResponse"
                }
              },
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/v2/exchange": {
      "get": {
        "tags": ["日更资讯"],
        "summary": "汇率换算",
        "description": "获取实时汇率信息和货币换算",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "description": "源货币代码",
            "required": true,
            "schema": {
              "type": "string",
              "example": "USD"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "目标货币代码",
            "required": true,
            "schema": {
              "type": "string",
              "example": "CNY"
            }
          },
          {
            "name": "amount",
            "in": "query",
            "description": "换算金额",
            "required": false,
            "schema": {
              "type": "number",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取汇率信息",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExchangeResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v2/bing": {
      "get": {
        "tags": ["日更资讯"],
        "summary": "必应壁纸",
        "description": "获取必应每日壁纸",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "description": "日期，格式 YYYY-MM-DD",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "resolution",
            "in": "query",
            "description": "分辨率",
            "required": false,
            "schema": {
              "type": "string",
              "example": "1920x1080"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取必应壁纸",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BingWallpaperResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v2/history": {
      "get": {
        "tags": ["日更资讯"],
        "summary": "历史上的今天",
        "description": "获取历史上的今天发生的事件",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "description": "查询日期，格式 MM-DD",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^\\d{2}-\\d{2}$",
              "example": "01-01"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取历史事件",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HistoryResponse"
                }
              }
            }
          }
        }
      }
    },
