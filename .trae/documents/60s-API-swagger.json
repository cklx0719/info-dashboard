      "TranslateResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "from": {
                    "type": "string",
                    "description": "源语言"
                  },
                  "to": {
                    "type": "string",
                    "description": "目标语言"
                  },
                  "original": {
                    "type": "string",
                    "description": "原文"
                  },
                  "result": {
                    "type": "string",
                    "description": "翻译结果"
                  }
                }
              }
            }
          }
        ]
      },
      "WikiResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "词条标题"
                  },
                  "summary": {
                    "type": "string",
