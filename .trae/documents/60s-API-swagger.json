    "/v2/translate": {
      "get": {
        "tags": ["实用功能"],
        "summary": "在线翻译",
        "description": "提供多语言在线翻译服务",
        "parameters": [
          {
            "name": "text",
            "in": "query",
            "description": "待翻译文本",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "from",
            "in": "query",
            "description": "源语言",
            "required": false,
            "schema": {
              "type": "string",
              "default": "auto"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "目标语言",
            "required": false,
            "schema": {
              "type": "string",
              "default": "zh"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "翻译成功",
